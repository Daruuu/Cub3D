{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "C/C++: gdb debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cub3D",
            "args": [
                "assets/maps/.extension"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
        }
    ]
}