{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "C/C++: gdb debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cub3d",
            "args": [
                "../maps/correct_maps/matrix.cub"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "/usr/bin/gdb",
        }
    ]
}